%h1 Products
.row
  - @products.each do |product|
    .col.s12.m6
      .card.blue-grey.darken-1
        .card-content.white-text
          %span.card-title
            =product.name
          %p
            I'm a product! My category is
            = product.category.name
        .card-action
          %a= link_to 'Show', product
          %a= link_to 'Edit', edit_product_path(product)
          %a= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }
          = form_for(@order_item) do |f|
            = f.hidden_field :product_id, value: product.id
            = f.number_field :quantity
            = f.submit 'Add to cart'
%br/

= link_to 'New product', new_product_path, class: "waves-effect waves-light btn"