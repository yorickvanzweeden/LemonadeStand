.container
  .row
    .col.s12.m6
      .card.blue-grey.darken-1
        .card-content.white-text
          %span.card-title
            = @user.first_name
          %p
            I'm a #{@user.first_name} #{@user.infix} #{@user.last_name}! My email is #{@user.email}. My address is #{@user.address}.
        .card-action
          %a= link_to 'Edit', edit_user_path(@user)
          %a= link_to 'Back', users_path