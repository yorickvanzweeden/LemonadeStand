.container
  %h1 Providers
  .row
    - @providers.each do |provider|
      .col.s12.m6
        .card.blue-grey.darken-1
          .card-content.white-text
            %span.card-title
              =provider.name
            %p
              I'm a provider! My description is #{provider.description}.
          .card-action
            %a= link_to 'Show', provider
            %a= link_to 'Edit', edit_provider_path(provider)
            %a= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' }
  %br/

  = link_to 'New provider', new_provider_path, class: "waves-effect waves-light btn"